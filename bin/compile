#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

logger -p user.notice -t "slugc[$$]" "openbd - compile start"

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
# parse args
ORGSUFF=bin
NEWSUFF=opt
OPT_DIR=${BIN_DIR%$ORGSUFF}$NEWSUFF
SERVLET_ENGINE="winstone-lite-0.9.10.jar"
BUILD_DIR=$1
CACHE_DIR=$2
LOGGER_FLAGS=""
OPENBD_VERSION="unknown"
KEEP_CACHE="false"

#figure out version used if a thin deployment
if [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-nightly.txt ]]; then
  OPENBD_VERSION="nightly"
  KEEP_CACHE="false" #never cache nightlies
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-1.1.txt ]]; then
  OPENBD_VERSION="1.1"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-1.1.txt ]]; then
    KEEP_CACHE="true"
  fi
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-1.2.txt ]]; then
  OPENBD_VERSION="1.2"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-1.2.txt ]]; then
    KEEP_CACHE="true"
  fi
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-1.3.txt ]]; then
  OPENBD_VERSION="1.3"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-1.3.txt ]]; then
    KEEP_CACHE="true"
  fi
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-1.4.txt ]]; then
  OPENBD_VERSION="1.4"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-1.4.txt ]]; then
    KEEP_CACHE="true"
  fi
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-2.0.txt ]]; then
  OPENBD_VERSION="2.0"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-2.0.txt ]]; then
    KEEP_CACHE="true"
  fi
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-2.0.1.txt ]]; then
  OPENBD_VERSION="2.0.1"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-2.0.1.txt ]]; then
    KEEP_CACHE="true"
  fi
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-2.0.2.txt ]]; then
  OPENBD_VERSION="2.0.2"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-2.0.2.txt ]]; then
    KEEP_CACHE="true"
  fi
elif [[ -f ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-3.0.txt ]]; then
  OPENBD_VERSION="3.0"
  if [[ -f ${CACHE_DIR}/WEB-INF/lib/openbd-heroku-readme-3.0.txt ]]; then
    KEEP_CACHE="true"
  fi
fi

if [ $KEEP_CACHE == "false" ]; then
  rm -rf $CACHE_DIR
fi

if [[ $OPENBD_VERSION == "unknown" && -f ${BUILD_DIR}/WEB-INF/lib/OpenBlueDragon.jar ]]; then
  # use developer supplied engine
  echo -n "-----> Installing Developer Supplied OpenBD Engine..."
  if [ ! -f ${BUILD_DIR}/WEB-INF/lib/${SERVLET_ENGINE} ]; then
    cp ${OPT_DIR}/server-engines/${SERVLET_ENGINE} ${BUILD_DIR}/WEB-INF/lib
  fi
  echo " done"
else
  # use thin deployment. Install OpenBD and overlay developer supplied files
  if [[ ! -d $CACHE_DIR && ! -L $CACHE_DIR ]]; then
    echo -n "-----> Downloading OpenBD ${OPENBD_VERSION}..."
    mkdir -p $CACHE_DIR
    cd $CACHE_DIR
    logger -p user.notice -t "slugc[$$]" "openbd - download war file"
    curl -o openbd.war --silent --location http://openbd.org/download/${OPENBD_VERSION}/openbd.war
    logger -p user.notice -t "slugc[$$]" "openbd - explode war file"
    jar xf openbd.war
    cp -r ${BUILD_DIR}/WEB-INF/lib/openbd-heroku-readme-${OPENBD_VERSION}.txt ${CACHE_DIR}/WEB-INF/lib
    echo " done"
  else
    cd $CACHE_DIR
  fi  
  echo -n "-----> Installing OpenBD ${OPENBD_VERSION}..."
  if [ -f ${BUILD_DIR}/bluedragon ]; then
    mv ${BUILD_DIR}/bluedragon ${BUILD_DIR}/org-bluedragon
    mkdir -p ${BUILD_DIR}/bluedragon
    cp -r bluedragon/* ${BUILD_DIR}/bluedragon
    cp -r ${BUILD_DIR}/org-bluedragon/* ${BUILD_DIR}/bluedragon
    rm -rf ${BUILD_DIR}/org-bluedragon
  else
    mkdir -p ${BUILD_DIR}/bluedragon
    cp -r bluedragon/* ${BUILD_DIR}/bluedragon
  fi
  if [ -f ${BUILD_DIR}/WEB-INF/lib ]; then
    mv ${BUILD_DIR}/WEB-INF/lib ${BUILD_DIR}/WEB-INF/org-lib
    mkdir -p ${BUILD_DIR}/WEB-INF/lib
    cp -r WEB-INF/lib/* ${BUILD_DIR}/WEB-INF/lib
    cp -r ${BUILD_DIR}/WEB-INF/org-lib/* ${BUILD_DIR}/WEB-INF/lib
    rm -rf ${BUILD_DIR}/WEB-INF/org-lib
  else
    mkdir -p ${BUILD_DIR}/WEB-INF/lib
    cp -r WEB-INF/lib/* ${BUILD_DIR}/WEB-INF/lib
  fi
  if [ -f ${BUILD_DIR}/WEB-INF/webresources ]; then
    mv ${BUILD_DIR}/WEB-INF/webresources ${BUILD_DIR}/WEB-INF/org-webresources
    mkdir -p ${BUILD_DIR}/WEB-INF/webresources
    cp -r WEB-INF/webresources/* ${BUILD_DIR}/WEB-INF/webresources
    cp -r ${BUILD_DIR}/WEB-INF/org-webresources/* ${BUILD_DIR}/WEB-INF/webresources
    rm -rf ${BUILD_DIR}/WEB-INF/org-webresources
  else
    mkdir -p ${BUILD_DIR}/WEB-INF/webresources
    cp -r WEB-INF/webresources/* ${BUILD_DIR}/WEB-INF/webresources
  fi
  if [ ! -f ${BUILD_DIR}/WEB-INF/lib/${SERVLET_ENGINE} ]; then
    cp ${OPT_DIR}/server-engines/${SERVLET_ENGINE} ${BUILD_DIR}/WEB-INF/lib
  fi
  echo " done"
fi

# install Procfile
if [ -f ${BUILD_DIR}/Procfile ]; then
  rm -rf ${BUILD_DIR}/Procfile
fi
echo -n "-----> Generating Procfile..."
echo -e "web: java \$JAVA_OPTS -Dlog4j.configuration=file:WEB-INF/bluedragon/log4j.properties -jar WEB-INF/lib/${SERVLET_ENGINE} --webroot=. --httpPort=\$PORT" >> ${BUILD_DIR}/Procfile
echo " done"

#fixup bluedragon.xml
sed -i 's#<trustcache>.*#<trustcache>true</trustcache>#' ${BUILD_DIR}/WEB-INF/bluedragon/bluedragon.xml
sed -i '0,s#<password>.*#<password>true</password>#' ${BUILD_DIR}/WEB-INF/bluedragon/bluedragon.xml

logger -p user.notice -t "slugc[$$]" "openbd - compile complete $LOGGER_FLAGS"